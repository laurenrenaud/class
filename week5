import csv

# open misspellings document
with open('common_misspellings.csv', encoding = 'ISO-8859-1') as csvfile:
readCSV = csv.reader(csvfile, delimiter=',')

def main():
    abstracts = open('downloadCitations.txt', 'r')
    count=1
    
    # create lists for misspellings and corrections
    wrong = []
    fixed = []
    
    # parse csv of misspellings into lists
    for row in readCSV:
        col1 = row[0]
        col2 = row[1]
        wrong.append(col1)
        fixed.append(col2)
    
    # make replacements
    for line in abstracts:
        for i in wrong:
            text_line = line.replace(wrong[i], fixed[i])
            print(text_line)
        
    abstracts.close()

main()
